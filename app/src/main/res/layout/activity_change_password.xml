<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/meo1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.ChangePassActivity">

    <ImageView
        android:layout_width="278dp"
        android:layout_height="208dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/forgot" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Your PassWord"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>
    <EditText
        android:id="@+id/edTennguoidung"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/duongvien_goc"
        android:hint="  UserName" />
    <EditText
        android:drawableLeft="@drawable/pas"
        android:id="@+id/edPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:background="@drawable/duongvien_goc"
        android:hint="  New PassWord" />
    <EditText
        android:drawableLeft="@drawable/pas"
        android:id="@+id/edRePassword"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/duongvien_goc"
        android:hint="  Enter Your PassWord again" />
    <Button
        android:id="@+id/btnChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="changePassword"
        android:textColor="#247936"
        android:background="@drawable/duongvien_goctron"
        android:text="Change PassWord" />
</LinearLayout>